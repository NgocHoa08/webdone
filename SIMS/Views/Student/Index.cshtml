@model IEnumerable<SIMS.Models.Student>

@{
    ViewData["Title"] = "List of Students";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary me-3">
                <i class="fas fa-home"></i> Home
            </a>
            <h2 class="mb-0">List of Students</h2>
        </div>

        @if (User.IsInRole("Administrator"))
        {
            <a asp-action="Add" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Add New Student
            </a>
        }
    </div>


    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search Form -->
    <div class="card mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchTerm" class="form-control"
                           placeholder="Search by student code, name, email, or major..."
                           value="@ViewData["SearchTerm"]" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Student Code</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Major</th>
                            <th>Year</th>
                            <th>GPA</th>
                            <th>Status</th>
                            <th style="width: 180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td><strong>@student.StudentCode</strong></td>
                                    <td>@student.FullName</td>
                                    <td>@student.Email</td>
                                    <td>@student.Phone</td>
                                    <td>@student.Major</td>
                                    <td>@student.EnrollmentYear</td>
                                    <td>
                                        @if (student.GPA.HasValue)
                                        {
                                            <span class="badge bg-info">@student.GPA.Value.ToString("F2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (student.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@student.StudentId"
                                               class="btn btn-sm btn-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Administrator"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@student.StudentId"
                                                   class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@student.StudentId"
                                                   class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center">
                                    @if (ViewData["SearchTerm"] != null)
                                    {
                                        <span>No students found matching your search.</span>
                                    }
                                    else
                                    {
                                        <span>No students found</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto hide alerts after 3 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 3000);
    </script>
}