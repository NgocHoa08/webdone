@model SIMS.Models.Course

@{
    ViewData["Title"] = "Add New Course";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add New Course</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Add" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="CourseCode" class="form-label">Course Code <span class="text-danger">*</span></label>
                                <input asp-for="CourseCode" class="form-control" placeholder="e.g., CS101" />
                                <span asp-validation-for="CourseCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Credits" class="form-label">Credits <span class="text-danger">*</span></label>
                                <input asp-for="Credits" type="number" class="form-control" min="1" max="10" />
                                <span asp-validation-for="Credits" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourseName" class="form-label">Course Name <span class="text-danger">*</span></label>
                            <input asp-for="CourseName" class="form-control" placeholder="e.g., Introduction to Computer Science" />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Instructor" class="form-label">Instructor</label>
                            <input asp-for="Instructor" class="form-control" placeholder="e.g., Dr. John Doe" />
                            <span asp-validation-for="Instructor" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter course description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                <label asp-for="IsActive" class="form-check-label">
                                    Active Status
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}